import("//build/ohos.gni")
import("//foundation/multimodalinput/input/multimodalinput_mini.gni")
mmi_binder_proxy_path = "${mmi_path}/frameworks/proxy/binder_proxy"

config("mmi_binder_proxy_config") {
  include_dirs = [
    "//foundation/multimodalinput/input/interfaces/native/innerkits/common/include",
    "//foundation/multimodalinput/input/interfaces/native/innerkits/event/include",
    "//foundation/multimodalinput/input/util/common/include",
    "//foundation/multimodalinput/input/util/network/include",
    "//foundation/multimodalinput/input/util/socket/include",
    "//foundation/multimodalinput/input/service/delegate_task/include",
    "//foundation/multimodalinput/input/service/filter/include",
    "//foundation/multimodalinput/input/service/message_handle/include",
    "//foundation/multimodalinput/input/service/permission_helper/include",
    "//foundation/multimodalinput/input/frameworks/proxy/event_handler/include",
    "${mmi_binder_proxy_path}/include",
  ]
}

ohos_source_set("mmi_binder_proxy") {
  part_name = "input"
  subsystem_name = "multimodalinput"
  sources = [
    "${mmi_binder_proxy_path}/src/input_connect_death_recipient.cpp",
    "${mmi_binder_proxy_path}/src/input_connect_def_parcel.cpp",
    "${mmi_binder_proxy_path}/src/input_connect_manager.cpp",
    "${mmi_binder_proxy_path}/src/input_connect_proxy.cpp",
  ]

  configs = [ ":mmi_binder_proxy_config" ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
    "samgr:samgr_proxy",
  ]
}
