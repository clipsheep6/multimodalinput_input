import("//build/ohos.gni")
import("//foundation/multimodalinput/input/multimodalinput_mini.gni")

group("patch_packages") {
  deps = [
    "diff_libinput_mmi:libinput-third-mmi",
    "prebuild_eudev:prebuild_eudev",
    "prebuild_x_keyboard_config:prebuild_x_keyboard_config",
  ]

  if (is_mmi_have_hdf) {
    deps += [
      "diff_libevdev_hdf:libevdev-hdf",
      "diff_mtdev_hdf:libmtdev-hdf",
