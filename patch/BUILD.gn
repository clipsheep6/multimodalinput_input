  }

  if (is_mmi_have_libinput) {
    deps += [
      "prebuild_libinput:prebuild_libinput",
      "//third_party/eudev:libudev",
      "//third_party/eudev:udev_conf",
      "//third_party/eudev:udevd",
      "//third_party/eudev:udevd.rc",
    ]
  }
}
