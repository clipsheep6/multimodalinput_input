import("//build/ohos.gni")
import("//foundation/multimodalinput/input/multimodalinput_mini.gni")
event_cooperate_path = "${mmi_path}/service/cooperate"

config("mmi_event_cooperate_config") {
  include_dirs = [
    "//foundation/multimodalinput/input/util/common/include",
    "${event_cooperate_path}/include",
    "${mmi_path}/interfaces/native/innerkits/event/include",
  ]
}

ohos_source_set("mmi_event_cooperate_service") {
  part_name = "input"
  sources = [
    "${event_cooperate_path}/src/event_cooperate_service.cpp",
    "${event_cooperate_path}/src/event_cooperate_stub.cpp",
  ]

  configs = [ ":mmi_event_cooperate_config" ]

  cflags = [ "-DOHOS_BUILD" ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
  ]
}

ohos_source_set("mmi_event_cooperate_proxy") {
  part_name = "input"
  sources = [
    "${event_cooperate_path}/src/event_cooperate_manager.cpp",
    "${event_cooperate_path}/src/event_cooperate_proxy.cpp",
  ]

  configs = [ ":mmi_event_cooperate_config" ]

  cflags = [ "-DOHOS_BUILD" ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "safwk:system_ability_fwk",
  ]
}
