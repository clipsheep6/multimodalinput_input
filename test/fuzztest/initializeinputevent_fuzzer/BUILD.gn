import("//build/config/features.gni")
import("//build/test.gni")
import("../../../multimodalinput_mini.gni")
module_output_path = "input/input"

##############################fuzztest##########################################
ohos_fuzztest("InitializeInputEventFuzzTest") {
  module_out_path = module_output_path
  fuzz_config_file = "${mmi_path}/test/fuzztest/initializeinputevent_fuzzer"
  include_dirs = [ 
    "${mmi_path}/interfaces/util/common/include",
    "${mmi_path}/service/event_resample/include"
   ]
  cflags = [
    "-g",
    "-O0",
    "-Wno-unused-variable",
    "-fno-omit-frame-pointer",
    "-Dprivate=public",
    "-Dprotected=public",
  ]
  sources = [ "initializeinputevent_fuzzer.cpp" ]

  deps = [
    "${mmi_path}/frameworks/proxy:libmmi-client",
    "${mmi_path}/service:libmmi-server",
    "${mmi_path}/util:libmmi-util",
  ]

  external_deps = [
    "ability_runtime:app_manager",
    "cJSON:cjson",
    "c_utils:utils",
    "common_event_service:cesfwk_core",
    "data_share:datashare_consumer",
    "graphic_2d:2d_graphics",
    "graphic_2d:librender_service_client",
    "hilog:libhilog",
    "image_framework:image_native",
    "ipc:ipc_single",
    "libinput:libinput-third-mmi",
    "window_manager:libwm",
  ]
}

###############################################################################
group("fuzztest") {
  testonly = true
  deps = []
  deps += [
    # deps file
    ":InitializeInputEventFuzzTest",
  ]
}
